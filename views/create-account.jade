extends layout

block content
	h1(class='login') login

	form(action='/login', method='post')
		div
			label Username: 
			input(type="text", id="username", name="username")

		div
			label Password: 
			input(type="password", id="password", name="password")

		div
			input(type="submit", id="create-account-button", value="Create")

	p
		small Hint - bob:secret
	p
		small Hint - joe:password

	h1(class='login') new user
	p Enter email address!