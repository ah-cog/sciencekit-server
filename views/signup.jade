extends layout

block content
	h1(class='login') signup

	form(action='/signup', method='post')
		div
			label Username: 
			input(type="text", id="username", name="username")

		div
			label Password: 
			input(type="password", id="password", name="password")

		div
			input(type="submit", id="create-account-button", value="Create")